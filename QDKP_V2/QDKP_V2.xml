          </OnClick>
        </Scripts>
      </Button>
      <Button name="$parent_OK" inherits="UIPanelButtonTemplate" text="Apply" id="12">
        <Size>
          <AbsDimension x="75" y="25"/>
        </Size>
        <Anchors>
          <Anchor point="BOTTOM" relativePoint="BOTTOM">
            <Offset>
              <AbsDimension x="50" y="6"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnClick>
            QDKP2_InputBox_OnEnter()
